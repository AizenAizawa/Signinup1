<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black2"
    android:gravity="bottom"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/venti" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:paddingTop="100dp"
        app:cardBackgroundColor="@color/white2"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="200dp"
            android:fontFamily="@font/popblack"
            android:text="Hello"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="170dp"
            android:fontFamily="@font/popreg"
            android:text="Insert Your Account"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/passwordIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/popmed"
                android:hint="Password"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/emailIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/popmed"
                android:hint="Email"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Iâ€™ve read and agree to Terms and Conditions"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ProgressBar
            android:id="@+id/progressBarIn"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/signIn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/popbold"
            android:text="Sign In"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/popbold"
            android:text="Already have an account?"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/popbold"
            android:text="Sign Up"
            android:textColor="@color/blue"
            android:textSize="14dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>